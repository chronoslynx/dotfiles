#!/bin/sh
# Resources and setup
xrdb -merge /users/tswihart3/.Xresources
xset +fp /usr/share/fonts/local
xset fp rehash
xscreensaver &
xmodmap /users/tswihart3/.Xmodmap

# Set up displays
sh /users/tswihart3/.screenlayout/default.sh

# Start Applications
urxvtd -q -f -o &
feh --bg-scale /users/tswihart3/Pictures/ssep.png
eval $(gnome-keyring-daemon --start) &
thunderbird &
pidgin &
start-ipython-notebook &

# Set up windows
conky | while read -r; do xsetroot -name "$REPLY"; done &
while true; do
    dwm
done
